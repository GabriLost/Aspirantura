<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="plugin-icon">images/pluginIcon.png</param>
        <param name="plugin-logo">images/pluginLogo.png</param>
    </plugin-info>
    <!--<component-import key="pluginSettingFactory" interface="com.atlassian.sal.api.pluginsettings.PluginSettingsFactory">-->
    <!--</component-import>-->
    <!--<component key="settingsComponent" class ="ru.gabri.dao.LastRun"/>-->
    <!-- add our i18n resource -->
    <resource type="i18n" name="i18n" location="UploadServicePlugin"/>
    <!-- add our web resources -->
    <web-resource key="UploadServicePlugin-resources" name="UploadServicePlugin Web Resources">
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        
        <resource type="download" name="UploadServicePlugin.css" location="/css/UploadServicePlugin.css"/>
        <resource type="download" name="UploadServicePlugin.js" location="/js/UploadServicePlugin.js"/>
        <resource type="download" name="images/" location="/images"/>

        <context>UploadServicePlugin</context>
    </web-resource>
    
</atlassian-plugin>